<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceModeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="669dp"
        android:scaleX="2.5"
        android:scaleY="2.6"
        android:src="@drawable/taxi_splash_screen"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="TAXI"
            android:textAlignment="center"
            android:textSize="150sp"
            android:textStyle="bold"
            android:textColor="#FFE348"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:text="Я пассажир"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:onClick="PassangerSignIn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480dp"
            android:text="Я водитель"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:onClick="DriverSignIn"/>



    </RelativeLayout>

</FrameLayout>